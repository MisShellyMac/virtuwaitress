    <section id="social" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Check us out on Social Media!</h2>
                    <center>
                    <div class="row">
                      <% socialMediaItems.forEach(function(item) { %>
                        <div class="col-md-4 col-sm-6 menu-item"  style="background-color:white;width:300px;height:150px;margin-left:60px">
                          <div class="menu-caption">
                              <h4><%= item.content %></h4>
                          </div>
                          <div style="float:left">
                            <%if (item.type == "twitter") { %>
                              <i style="color:gray;font-size:30px" class="fa fa-twitter"></i>
                            <% } %>
                            <%if (item.type == "instagram") { %>
                              <i style="color:gray;font-size:30px" class="fa fa-instagram"></i>
                            <% } %>
                          </div>
                          <div style="float:right">
                            <%if (item.type == "twitter") { %>
                                <img src="<%= item.image_url %>" style="height:50px" class="img-responsive img-centered" alt="">
                                <p style="color:gray"><%= item.username %></p>
                            <% } %>
                            <%if (item.type == "instagram") { %>
                                <img src="<%= item.image %>" style="height:50px" class="img-responsive img-centered" alt="">
                                <p style="color:gray"><%= item.username %></p>
                            <% } %>
                          </div>
                        </div>
                      <% }); %>
                    </div>
                  </center>
            	</div>
