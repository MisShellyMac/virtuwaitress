<!doctype html>
<html>
<head>
    <title>Virtuwaitress Dashboard</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/dashboard.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Virtuwaitress Dashboard</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>id</strong>: <%= user.id %><br>
                        <strong>email</strong>: <%= user.username %><br>
                        <strong>password</strong>: <%= user.password %>
                    </p>

            </div>
        </div>

    </div>

  <script type="text/x-handlebars" data-template-name="foods/index">
    <table class="editlist">
      {{#each item in model itemController="food"}}
      <tr {{bind-attr class="item.isCompleted:completed item.isEditing:editing" }}>
        <td>
          {{input type="checkbox" checked=item.isCompleted class="toggle"}}
        </td>
        <td>
          {{#if item.isEditing}} {{edit-item class="edit" value=item.title focus-out="acceptChanges" insert-newline="acceptChanges"}}
          {{else}}
          <label class="menu" {{action "editItem" on="doubleClick" }}>{{item.title}}</label>
          {{/if}}
        </td>
        <td>
          {{#if item.isEditing}} {{edit-item class="edit" value=item.price focus-out="acceptChanges" insert-newline="acceptChanges"}}
          {{else}}
          <label class="menu" {{action "editItem" on="doubleClick" }}>{{item.price}}</label>
          {{/if}}
        </td>
        <td>
          {{#if item.isEditing}} {{edit-item class="edit" value=item.active focus-out="acceptChanges" insert-newline="acceptChanges"}}
          {{else}}
          <label class="menu" {{action "editItem" on="doubleClick" }}>{{item.active}}</label>
          {{/if}}
        </td>
        <td>
          {{#if item.isEditing}} {{edit-item class="edit" value=item.vegan focus-out="acceptChanges" insert-newline="acceptChanges"}}
          {{else}}
          <label class="menu" {{action "editItem" on="doubleClick" }}>{{item.vegan}}</label>
          {{/if}}
        </td>
        <td>
          {{#if item.isEditing}} {{edit-item class="edit" value=item.vegetarian focus-out="acceptChanges" insert-newline="acceptChanges"}}
          {{else}}
          <label class="menu" {{action "editItem" on="doubleClick" }}>{{item.vegetarian}}</label>
          {{/if}}
        </td>
        <td>
          {{#if item.isEditing}} {{edit-item class="edit" value=item.category focus-out="acceptChanges" insert-newline="acceptChanges"}}
          {{else}}
          <label class="menu" {{action "editItem" on="doubleClick" }}>{{item.category}}</label>
          {{/if}}
        </td>
        <td>
          {{#if item.isEditing}} {{edit-item class="edit" value=item.gluten_free focus-out="acceptChanges" insert-newline="acceptChanges"}}
          {{else}}
          <label class="menu" {{action "editItem" on="doubleClick" }}>{{item.gluten_free}}</label>
          {{/if}}
        </td>
        <td>
          <button {{action "removeItem"}} class="destroy"></button>
        </td>
      </tr>
      <tr>
        <td colspan='9'>
          {{#if item.isEditing}} {{edit-item class="edit" value=item.description focus-out="acceptChanges" insert-newline="acceptChanges"}}
          {{else}}
          <label class="menu-description" {{action "editItem" on="doubleClick" }}>{{item.description}}</label>
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </table>
  </script>

  <script type="text/x-handlebars" data-template-name="foods">
  <center>
      <section class="dashboard">
        <header class="header">
        </header>
        <section class="main">
          {{input type="text" class="newItem" placeholder="Add new food" value=newTitle action="createFood"}}
          {{outlet}}
        </section>
    </center>
  </script>

  <script src="js/libs/jquery-1.11.2.min.js"></script>
  <script src="js/libs/handlebars-v1.3.0.js"></script>
  <script src="js/libs/ember.js"></script>
  <script src="js/libs/ember-data.js"></script>

  <script src="js/emberApp.js"></script>
  <script src="js/router.js"></script>
  <script src="js/emberModels/food.js"></script>
  <script src="js/emberControllers/foodsController.js"></script>
  <script src="js/emberControllers/foodController.js"></script>
  <script src="js/emberViews/editItemView.js"></script>


</div>
</body>
</html>
